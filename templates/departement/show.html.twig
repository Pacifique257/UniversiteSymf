{% extends 'base.html.twig' %}

{% block title %}Departement
{% endblock %}

{% block body %}
	<h1>Departement</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ departement.id }}</td>
			</tr>
			<tr>
				<th>Nom du departement</th>
				<td>{{ departement.nomd }}</td>
			</tr>
			<tr>
				<th>Code du departement</th>
				<td>{{ departement.coded }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_departement_index') }}" class="btn btn-primary">
		<i class="fas fa-arrow-left"></i>
	</a>

	<a href="{{ path('app_departement_edit', {'id': departement.id}) }}">
		<button type="button" class="btn btn-primary">
			<i class="fas fa-edit"></i>
		</a>

		{{ include('departement/_delete_form.html.twig') }}
	{% endblock %}
